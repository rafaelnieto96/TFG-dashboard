{% extends "layout.html.twig" %}

{% block title %}Dashboard Noticias
{% endblock %}

{% block bodyContent %}

	<!-- Start List Table -->
	<div class="main-table">
		<div class="table">
			<h2 class="mb-4">Listado de Noticias</h2>
			<!-- Start Search Box -->
			<div class="row justify-content-center mb-3">
				<div class="col-md-4">
					<div class="input-group mb-3">
						<input type="text" class="form-control input-text" id="search-input" placeholder="Filtrar por nombre..." aria-label="Recipient's username" aria-describedby="basic-addon2">
						<div class="input-group-append">
							<button class="btn btn-md btn-outline-warning" type="button">
								<i class="fa fa-search"></i>
							</button>
						</div>
					</div>
				</div>
				<div class="col-md-8">
					<a href="{{ path('posts_new') }}" class="btn btn-outline-warning float-right mr-4">Crear Noticia</a>
				</div>
			</div>
			<!-- End Search Box -->
			{% if items|length == 0 %}
				<p>Lista vacia</p>
			{% else %}
				<table>
					<thead>
						<tr>
							<th style="width: 20%;">TÃ­tulo</th>
							<th style="width: 40%;">Contenido</th>
							<th style="width: 20%;">Imagen</th>
							<th style="width: 20%;">Acciones</th>
						</tr>
					</thead>
					<tbody>
						{# <p class="text-center" style="display: none; font-weight: bold;" id="no-results" colspan="4">No results found</p> #}
						{% for item in items %}
							<tr>
								<td>{{ item.name }}</td>
								<td>{{ item.description }}</td>
								<td>{{ item.points }}</td>
								<td class="primary">
									<details class="dropdown">
										<summary role="button">
											<i class="fa fa-2x fa-cog"></i>
										</summary>
										<ul>
											<li>
												<a href="{{ path('posts_edit', {'id': item.id}) }}">Edit</a>
											</li>
											<li>
												<a href="{{ path('posts_delete', {'id': item.id}) }}">Delete</a>
											</li>
										</ul>
									</details>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% endif %}
		</div>
		{# <a href="#">Show all</a> #}
		<!-- End List Table -->
	</div>

	<script>
		const searchInput = document.querySelector('#search-input');
		const table = document.querySelector('table');
		const tbody = document.querySelector('tbody');
		const emptyListMessage = document.querySelector('.empty-list');

		let message = document.querySelector('.no-results');

		if (! message) {
		message = document.createElement('p');
		message.classList.add('no-results', 'text-center', 'font-weight-bold', 'mt-4', 'mb-4');
		message.textContent = 'No results found';
		}

		searchInput.addEventListener('input', () => {
		const searchTerm = searchInput.value.trim().toLowerCase();
		const rows = document.querySelectorAll('tbody tr');

		let count = 0;
		rows.forEach((row) => {
		const name = row.querySelector('td:first-child').textContent.trim().toLowerCase();
		const description = row.querySelector('td:nth-child(2)').textContent.trim().toLowerCase();

		if (name.includes(searchTerm) || description.includes(searchTerm)) {
		row.style.display = '';
		count++;
		} else {
		row.style.display = 'none';
		}
		});

		if (count === 0) {
		tbody.style.display = 'none';
		table.insertAdjacentElement('afterend', message);
		emptyListMessage.style.display = 'none';
		} else {
		tbody.style.display = '';
		message.remove();
		if (emptyListMessage && rows.length === 0) {
		emptyListMessage.style.display = '';
		}
		}
		});
	</script>


{% endblock %}
